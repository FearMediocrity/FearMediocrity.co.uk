---
layout: default
pageable: true
per_page: 10
---

<% content_for :page_class do %>
    archive blog_index
<% end %>

<% content_for :header do %>
    <h1>
      <span>Work</span>
    </h1>
<% end %>

<% (Time.now.year).downto(2014) do |year| %>
    <section class="summary summary-blog">

      <header>
        <h2><%=year%></h2>
      </header>

      <% page_articles('blog').select{|resource| resource.date.year == year }.each do |article| %>
          <%=partial "article-summary-blog", locals: {article: article} %>
      <% end %>

    </section>
<% end %>

