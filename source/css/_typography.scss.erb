@mixin body_font{
  font-family: "proxima-nova",sans-serif;
}

@mixin title_font{
  font-family: "proxima-nova-bold",sans-serif;
  font-weight: 300;
}

@font-face {
  font-family: 'proxima-nova';
  src: url('<%=data.site.cdn_url%>/fonts/proximanova-reg-webfont.eot'); /* IE9 Compat Modes */
  src: url('<%=data.site.cdn_url%>fonts/proximanova-reg-webfont.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
  url('<%=data.site.cdn_url%>fonts/proximanova-reg-webfont.woff') format('woff'), /* Modern Browsers */
  url('<%=data.site.cdn_url%>fonts/proximanova-reg-webfont.ttf')  format('truetype'), /* Safari, Android, iOS */
  url('<%=data.site.cdn_url%>fonts/proximanova-reg-webfont.svg#svgFontName') format('svg'); /* Legacy iOS */
}


@font-face {
  font-family: 'proxima-nova-bold';
  src: url('<%=data.site.cdn_url%>fonts/proximanova-bold-webfont.eot'); /* IE9 Compat Modes */
  src: url('<%=data.site.cdn_url%>fonts/proximanova-bold-webfont.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
  url('<%=data.site.cdn_url%>fonts/proximanova-bold-webfont.woff') format('woff'), /* Modern Browsers */
  url('<%=data.site.cdn_url%>fonts/proximanova-bold-webfont.ttf')  format('truetype'), /* Safari, Android, iOS */
  url('<%=data.site.cdn_url%>fonts/proximanova-bold-webfont.svg#svgFontName') format('svg'); /* Legacy iOS */
}

@font-face {
  font-family: 'fontello';
  src: url('<%=data.site.cdn_url%>fonts/fontello.eot?84168755');
  src: url('<%=data.site.cdn_url%>fonts/fontello.eot?84168755#iefix') format('embedded-opentype'),
  url('<%=data.site.cdn_url%>fonts/fontello.woff?84168755') format('woff'),
  url('<%=data.site.cdn_url%>fonts/fontello.ttf?84168755') format('truetype'),
  url('<%=data.site.cdn_url%>fonts/fontello.svg?84168755#fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}
