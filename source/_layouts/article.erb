<% article ||= current_article %>

<% content_for :page_class do %>
    content article <%=article.slug%>
<% end %>

<% content_for :header do %>

    <h1>
      <span><%=article.date.strftime("%B #{article.date.day.ordinalize} %Y")%></span>
      <span><%=article.data.title%></span>
    </h1>

    <p><span><% if article.tags.present? %><% article.tags.each do |tag| %><%= link_to tag.capitalize, tag_path(tag) %> <% end %><% end %></span></p>

<% end %>


<% content_for :critical_css do %>

    <style>
        html {
            font-family: sans-serif;
            -ms-text-size-adjust: 100%;
            -webkit-text-size-adjust: 100%;
        }

        body {
            margin: 0;
        }

        header {
            display: block;
        }

        a {
            background: transparent;
        }

        pre {
            overflow: auto;
        }

        code,pre {
            font-family: monospace, monospace;
            font-size: 1em;
        }

        input {
            color: inherit;
            font: inherit;
            margin: 0;
        }

        input::-moz-focus-inner {
            border: 0;
            padding: 0;
        }

        input {
            line-height: normal;
        }

        html,input {
            color: #222;
        }

        body {
            font-size: 1em;
            line-height: 1.4;
        }

        a {
            color: #00e;
        }

        [class*=" icon-"]:before {
            font-family: "fontello";
            font-style: normal;
            font-weight: normal;
            speak: none;
            display: inline-block;
            text-decoration: inherit;
            width: 1em;
            margin-right: .2em;
            text-align: center;
            font-variant: normal;
            text-transform: none;
            line-height: 1em;
            margin-left: .2em;
        }

