<% pages = sitemap.resources.find_all{|p| p.source_file.match(/\.html/) || p.source_file.match(/\.md/) || p.source_file.match(/\.html.erb/) || p.source_file.match(/\.md.erb/) } %>
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% pages.each do |p| %>

<url>
<loc><%=data.site.url%>/<%=p.destination_path.gsub('/index.html','/')%></loc>
<priority>0.7</priority>
</url>
<% end %>
</urlset>