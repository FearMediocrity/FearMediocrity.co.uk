<% content_for :primary do %>

articles <<

<% end %>

<% content_for :secondary do %>

    <%
       @articles = []

       sitemap.resources.each do |page|
         next unless page.data["sort_date"].present?

         @articles << page

       end
    %>

    <% @articles.sort!{ |x,y| y.data["sort_date"] <=> x.data["sort_date"] } %>

    <% @articles.each do |article| %>

        <% render "". locals: {article: article} if page.url =~ /^(\/work\/)/ %>

        <% render "" if page.url =~ /^(\/2014\/)/ %>
    <% end %>
<% end %>