---
layout: default
pageable: true
per_page: 10
---

<% content_for :page_class do %>
    archive work_index
<% end %>

<% content_for :header do %>
    <h1>
      <span>Work</span>
    </h1>
<% end %>

<% (Time.now.year).downto(2011) do |year| %>
    <% articles = page_articles('work').select{|resource| resource.date.year == year && resource.data.published != false } %>

    <% next unless articles.present? %>

    <section class="summary summary-work">

      <header>
        <h2><%=year%></h2>
      </header>

      <% articles.each do |article| %>
          <%=partial "article-summary-work", locals: {article: article} %>
      <% end %>

    </section>

<% end %>

