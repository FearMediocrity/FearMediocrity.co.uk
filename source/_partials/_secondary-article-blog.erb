
<article class="blog">

  <header>
    <h2><%= link_to article.title, article %></h2>
  </header>

  <div class="body">
    <p><%=article.summary%></p>
  </div>

  <footer>

        <div>Blog</div>
        <div><%=article.date.strftime("%B #{article.date.day.ordinalize} %Y")%></div>

  </footer>

</article>